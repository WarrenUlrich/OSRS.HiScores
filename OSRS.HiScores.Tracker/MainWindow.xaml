<mah:MetroWindow x:Class="OSRS.HiScores.Tracker.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" xmlns:Controls="clr-namespace:OSRS.HiScores.Tracker"
                 Title="HiScore Tracker"
                 Height="600"
                 Width="800">

    <Grid >
        <Controls:ModeSelector></Controls:ModeSelector>
        <TabControl>
            <TabItem Header="Browse" Height="25" VerticalAlignment="Top">
                <Controls:BrowsePage/>
            </TabItem>
            <TabItem Header="Search" Height="25" VerticalAlignment="Center" Margin="-1,0,1,0">
                <Grid>
                    <Controls:SearchPage/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</mah:MetroWindow>
