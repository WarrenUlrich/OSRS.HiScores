<UserControl x:Class="OSRS.HiScores.Tracker.ModeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OSRS.HiScores.Tracker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ComboBox x:Name="ModeSelection"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="106" Height="25" Margin="96,0,0,0" SelectionChanged="SelectionChanged">
            <ComboBoxItem Content="Classic"/>
            <ComboBoxItem Content="Ironman"/>
            <ComboBoxItem Content="Ultimate Ironman"/>
            <ComboBoxItem Content="Hardcore Ironman"/>
            <ComboBoxItem Content="Deadman Mode"/>
            <ComboBoxItem Content="Leagues"/>
        </ComboBox>  
    </Grid>
</UserControl>
